= form_for @saved_article do |f|
  -if @saved_article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@saved_article.errors.count, "error")} prohibited this saved_article from being saved:"
      %ul
        - @saved_article.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label :blurb
    = f.text_area :blurb

  .actions
    = f.submit 'Save'
