= form_for( :sessions, :url => { :controller => 'sessions', :action => 'create'} ) do |f|
  %table
    %tr
      %th
        = f.label :email
      %td
        = f.text_field :email
    %tr
      %th
        = f.label :password
      %td
        = f.text_field :password
    %tr
      %td
        = f.submit "Log in", :class => 'submit'
  
