= form_for @article, :remote => true, :id => "new-article" do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %table
    %tr
      %th
        = f.label :title
      %td
        = f.text_field :title
    %tr
      %th
        = f.label :url
      %td
        = f.text_field :url
    = f.hidden_field :user_id, :value => @current_user ? @current_user.id : 1
    %tr
      %td
      %td
        = f.submit 'Save', :class => "submit"