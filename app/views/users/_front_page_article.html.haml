%article{ :class => "#{article[:classes]} front-page-article-wrapper" }
  .close-box x
  %article{ :class => "#{article[:classes]} article-guts" }
    %h3= "Shared by #{article[:shared_by]}"
    %h1
      = link_to article[:article].title, article[:article].url
    - if article[:article].first_paragraph.present?
      %p= raw article[:article].first_paragraph.truncate(300)
  %p.share-this share this