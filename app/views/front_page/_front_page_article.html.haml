%div{:id => "article_wrapper_#{article[:article].id}", :class => "#{article[:classes]} front-page-article-wrapper", :article_id => article[:article].id, 'data-id' => "#{article[:article].id}", :article_size => article[:size] }
  .close-box x
  %article{ :class => "#{article[:classes]} article-guts" }
    %h3= "Shared by #{article[:shared_by]}"
    - unless article[:article][:source] == "MSNBC"
      %h1= link_to article[:article].title, article[:article].url
    - if article[:article].first_paragraph.present?
      %p= raw article[:article].first_paragraph
  %span.share-this-button Share This
